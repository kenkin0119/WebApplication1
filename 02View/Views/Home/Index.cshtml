@model IEnumerable<_02View.Models.NightMarket>
                    @*namespace*@
@{
    ViewBag.Title = "各大夜市列表";
}

<h2>各大夜市列表</h2>

<p>
    @*ActionLink():產生一個有指定Action的超連結*@
    @Html.ActionLink("新增一筆資料", "Create") |

    @*<a href="/Home/Create/">新增一筆資料</a>*@
</p>
<table class="table">
    <tr>
        <th>
            @*編號*@
            @Html.DisplayNameFor(model=>model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)  @*到模型裡面取出屬性名稱*@
            @*夜市名稱*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
            @*地址*@
        </th>
        <th>
            照片
        </th>
        <th>
            地圖
        </th>
        <th>
            資料管理
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Id
            @*@Html.DisplayFor(modelItem => item.Id)*@
        </td>
        <td>
            @item.Name
            @*@Html.DisplayFor(modelItem => item.Name)*@
        </td>
        <td>
            @item.Address
            @*@Html.DisplayFor(modelItem => item.Address)*@
        </td>
        <td>
            <img src="~/images/@(item.Id).jpg" width="200" />
                                @* @() *@
        </td>
        <td>
            <a href="https://www.google.com.tw/maps/search/@item.Address" target="_blank" class="btn btn-primary">查看地圖</a>
        </td>

        <td>
            @*@Html.ActionLink("編輯", "Edit", new { id = item.Id }) |*@

            @Html.ActionLink("詳細資料", "Display", new { id = item.Id }) |
            <a href="/Home/Display/@item.Id">詳細資料</a>

            @*@Html.ActionLink("刪除", "Delete", new { id = item.Id })*@
        </td>
    </tr>
}

</table>
