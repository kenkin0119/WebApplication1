@model IEnumerable<_04ViewModel.Models.tDepartment>

@{
    ViewBag.Title = "部門管理作業";
}

<h2 class="alert alert-info text-center">部門管理作業</h2>

<p class="text-right">
    @Html.ActionLink("新增資料", "Create", null, new {@class="btn btn-primary"})
</p>

@if (Model.Count() == 0)
{
    <h2 class="text-danger">目前尚未有任何資料!!</h2>
}
else
{
    <table class="table">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.fDepId)
            </th>
            <th style="width:70%">
                @Html.DisplayNameFor(model => model.fDepName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.fDepId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fDepName)
                </td>
                <td class="text-center">
                    @Html.ActionLink("編輯", "Edit", new { id = item.fDepId },new{ @class = "btn btn-warning" }) 
                    @*@Html.ActionLink("詳細內容", "Details", new { id = item.fDepId }) |*@
                    @Html.ActionLink("刪除", "Delete", new { id = item.fDepId }, new { onclick = "return confirm('你確定要刪除" + item.fDepId + item.fDepName + "的資料嗎?')", @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>

}




