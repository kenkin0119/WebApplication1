@model MCSDD01.Models.Members

@{
    ViewBag.Title = "Details";
}

<h3 class="mt-3">會員詳細資料</h3>

<div class="card border-primary">
    <div class="card-body row">
        <div class="col-7">
            <h2>
                <i class="bi bi-android2"></i>
                <strong>
                    @Html.DisplayFor(model => model.MemberName) (@Html.DisplayFor(model => model.MemberID))
                </strong>
            </h2>

            <h3 class="mt-3">
                <i class="bi bi-calendar-date"></i>
                @Html.DisplayFor(model => model.MemberBirthday)
            </h3>

            <h3 class="mt-3">
                @Html.DisplayFor(model => model.Account)
            </h3>

            <h3 class="mt-3">
                @*@Html.DisplayFor(model => model.Password)*@
                ***************************
            </h3>

        </div>

        <div class="col-4">
            <div>
                @if (Model.MemberPhotoFile == null)
                {
                    <i class="bi bi-emoji-smile" style="font-size:100px"></i>
                }
                else
                {
                    <img src="@Model.MemberPhotoFile" class="img-thumbnail" />
                }
            </div>
        </div>
    </div>
    <div class="card-footer">
        <h5 class="text-right">於 @Html.DisplayFor(model => model.CreatedDate) 加入本站會員</h5>
    </div>
</div>