
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <form action="/MultiFileUpload/Create" method="post" enctype="multipart/form-data">

        <p>請選擇要上傳的檔案</p>
        <p><input id="Button1" type="button" onclick="addFileUpload()" value="增加一個檔案" /></p>
        <div id="FileArea">

        </div>
        
        <p><input id="Submit1" type="submit" value="上傳檔案" /></p>
        <hr />
        @ViewBag.Message
        <div>
            <a href="/MultiFileUpload/ShowPhotos">點我看所有照片</a>
        </div>
    </form>

    <script>
        var FileArea = document.getElementById("FileArea");
        
        

        function addFileUpload() {

            var br = document.createElement("br");
            var input = document.createElement("input");
            input.type = "file";
            input.name = "photos";

            FileArea.appendChild(input);
            FileArea.appendChild(br);
        }
        

    </script>
</body>
</html>
