@model Tour.Models.Attrations

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_Manager.cshtml";
}

<h3 class="mt-3">會員詳細資料</h3>

<div class="card border-primary">
    <div class="card-body row">
        <div class="col-7">
            <h2>
                <i class="bi bi-android2"></i>
                <strong>
                    @Html.DisplayFor(model => model.AttrationName) (@Html.DisplayFor(model => model.AttrationID))
                </strong>
            </h2>

            <h3 class="mt-3">
                <i class="bi bi-calendar-date"></i>
                @Html.DisplayFor(model => model.Address)
            </h3>

            <h3 class="mt-3">
                @Html.DisplayFor(model => model.Tel)
            </h3>

            <h3 class="mt-3">
                @Html.DisplayFor(model => model.Ticketinfo)
            </h3>

        </div>

        <div class="col-4">
            <div>
                @if (Model.Picture1 == "")
                {
                    <i class="bi bi-emoji-smile" style="font-size:100px"></i>
                }
                else
                {
                    <img src="@Model.Picture1" class="img-thumbnail" data-toggle="tooltip" data-placement="right" title="@Model.Picdescribe1"/>
                }
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="">@Html.DisplayFor(model => model.Description)</div>
    </div>
</div>

@section scripts{
    <script>

        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })


    </script>
    }

